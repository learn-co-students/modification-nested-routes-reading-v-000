<%= form_for(@post) do |f| %>
  <!-- form_for automatically routes to POST posts_controller#create for a new Post -->
  <%= author_id_field(@post) %>
  <br>
  <label>Post title:</label><br>
  <%= f.text_field :title %><br>

  <label>Post Description</label><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>
